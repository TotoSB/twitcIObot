from twitchio.ext import commands

bot_name = 'BOT_NAME'
bot = commands.Bot(
    irc_token='....',
    client_id='....',
    nick=bot_name,
    prefix='!',
    initial_channels=['fintyer']
)


@bot.event
async def event_message(ctx):

    if ctx.author.name.lower() == bot_name:
        return

    await bot.handle_commands(ctx)

    if ctx.content == 'hola':
        await ctx.channel.send(f'Hola @{ctx.author.name} bienvenido al stream :D ')

@bot.command(name="test")
async def test(ctx):
    await ctx.send("Funciona :D")

